<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/splash_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/login_img_padding"
        android:layout_marginRight="@dimen/login_img_padding"
        android:scaleType="fitCenter"
        android:src="@drawable/wolox_logo_splash" />

    <include
        layout="@layout/content_login_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>