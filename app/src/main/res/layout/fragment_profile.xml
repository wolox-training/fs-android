<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/vSearchQuery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="@string/profile_search_txt"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/vRecyclerViewProfiles"
        app:layout_constraintEnd_toStartOf="@+id/vSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/vSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/profile_search_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vRecyclerViewProfiles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/profile_default_margin"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/profile_default_margin"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vSearch"
        tools:listitem="@layout/profile_item" />

    <ImageView
        android:id="@+id/vEmptyListIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/news_padding_default"
        android:layout_marginTop="@dimen/news_padding_default"
        android:layout_marginEnd="@dimen/news_padding_default"
        android:layout_marginBottom="@dimen/news_padding_default"
        android:scaleType="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vSearchQuery"
        app:srcCompat="@drawable/empty_list_error" />

</androidx.constraintlayout.widget.ConstraintLayout>