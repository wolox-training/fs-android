<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Login Screen -->
    <style name="TextInputLayout">
        <item name="android:layout_marginLeft">@dimen/login_margin_side</item>
        <item name="android:layout_marginRight">@dimen/login_margin_side</item>
        <item name="android:layout_marginBottom">@dimen/login_wrapper_margin_bottom</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_marginLeft">@dimen/login_margin_side</item>
        <item name="android:layout_marginRight">@dimen/login_margin_side</item>
        <item name="android:layout_marginTop">@dimen/login_button_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/login_button_margin_bottom</item>
    </style>

</resources>
